<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CoffeeDairy" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#AC9176</item>
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>


    <style name="TabTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/selected</item>
        <item name="colorSecondary">@color/unselected</item>

        <item name="tabSelectedTextColor">@color/selected</item>
        <item name="tabTextColor">@color/unselected</item>

        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="toolbarTitleTheme" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CoffeeDairy" parent="Base.Theme.CoffeeDairy" />
</resources>