<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/item_grid"
    android:background="@drawable/radius">

    <ImageView
        android:id="@+id/log_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/thumbnail_image"
        />

    <TextView
        android:id="@+id/log_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_thumbnail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        android:text="0000/00/00"
        />

    <TextView
        android:id="@+id/log_coffee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_date"
        android:layout_centerHorizontal="true"
        android:text="samplecoffee"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/log_cafe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_coffee_name"
        android:layout_centerHorizontal="true"
        android:text="samplecafe"
        />

</RelativeLayout>