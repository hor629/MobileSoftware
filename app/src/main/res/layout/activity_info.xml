<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#AC9176">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/InfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textColor="#ffffff"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/radius"
        android:padding="16dp"
        android:layout_margin="20dp">

        <!-- Search EditText -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="원하는 정보를 찾아보세요!"/>

    </LinearLayout>

    <!-- Additional Layout for Cafe Information and Search -->
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/radius"
        android:padding="16dp"
        android:layout_margin="20dp">

        <!-- Info Image -->
        <ImageView
            android:id="@+id/cafeInfoImage"
            android:background="@drawable/ic_launcher_background"
            android:layout_width="330dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20px"
            />

        <!-- Info Title -->
        <TextView
            android:id="@+id/cafeInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafe Location"
            android:textSize="16sp"/>

        <!-- Info Content -->
        <TextView
            android:id="@+id/cafeInfoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@tools:sample/lorem/random"
            android:maxLines="3"
            android:textSize="16sp"/>

        <!-- Button to View Info Details -->
        <Button
            android:id="@+id/viewInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Info Details"
            android:backgroundTint="#AC9176"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/radius"
        android:padding="16dp"
        android:layout_margin="20dp">

        <!-- Info Image -->
        <ImageView
            android:id="@+id/cafeInfoImage2"
            android:background="@drawable/ic_launcher_background"
            android:layout_width="330dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20px"
            />

        <!-- Info Title -->
        <TextView
            android:id="@+id/cafeInfoTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafe Location"
            android:textSize="16sp"/>

        <!-- Info Content -->
        <TextView
            android:id="@+id/cafeInfoContent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@tools:sample/lorem/random"
            android:maxLines="3"
            android:textSize="16sp"/>

        <!-- Button to View Info Details -->
        <Button
            android:id="@+id/viewInfoButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Info Details"
            android:backgroundTint="#AC9176"/>
    </LinearLayout>

</LinearLayout>
